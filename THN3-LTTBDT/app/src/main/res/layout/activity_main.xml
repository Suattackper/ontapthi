            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:text=""
            android:hint="Nhập số hàng" />
    </LinearLayout>

    <ScrollView
