<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="10"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvMaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvHangXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hãng xe: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvGiaThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gía thu: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvDiaDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa điểm: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvLoaiXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại xe: "
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvEdit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/edit"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imvDelete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>